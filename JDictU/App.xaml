<Application
    x:Class="JDictU.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JDictU"
    xmlns:converters="using:JDictU.Converters"
    RequestedTheme="Dark">

    <Application.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="IceBlueBrush" Color="#FF91C3FF"/>
        <SolidColorBrush x:Key="DullGreyBrush" Color="#FFCBC8C8"/>
        
        <!-- Converters -->
        <converters:ColorBrushConverter x:Key="ColorBrushConverter"/>
        <converters:InverseColorBrushConverter x:Key="InverseColorBrushConverter"/>
        <converters:TrueIfListNotEmptyConverter x:Key="TrueIfListNotEmptyConverter"/>
        <converters:VisibilityConverter x:Key="VisibilityConverter"/>
        <converters:VisibilityConverterListEmpty  x:Key="VisibilityConverterListEmpty"/>
        <converters:InverseVisibilityConverter x:Key="boolVisibilityConverter"/>
        <converters:DateConverter x:Key="DateConverter"/>
        <converters:ToKanjiObjectConverter x:Key="tkosconverter"/>
        <converters:ToUpDownConverter x:Key="updownconverter"/>

    </Application.Resources>

</Application>
